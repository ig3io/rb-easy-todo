%html
  %head
    %meta{:charset => "utf-8"}
    %title Easy-TODO
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/css/bootstrap.css'}
  %body
    .container
      .col-md-3
        .panel.panel-default
          .panel-heading
            %h3.panel-title Create your todo list
          .panel-body
            %form{:action => '/create', :method => 'POST'}
              .fom-group
                %label Title
                %input.form-control{:type => 'text', :name => 'title', :placeholder => 'Title'}
              .form-group
                %label Password
                %input.form-control{:type => 'text', :name => 'password', :placeholder => 'Password'}
              %input.btn.btn-primary{:type => 'submit', :value => 'Create TODO'}

